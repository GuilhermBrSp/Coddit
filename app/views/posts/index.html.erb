<p id="notice"><%= notice %></p>

<h1>Posts</h1>

<table>
  <thead>
    <tr>
      <th>Title </th>
        <th colspan="1"></th>
      <th>Body  </th>

      <th colspan="2"></th>
      <th>Author</th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td></td>
        <td><%= post.title %></td>
        <td><%= post.body %></td>
        <td><%= @author.nick_name %></td>
        <td><%= link_to 'Show ', post %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
