<div class="row">
  <div class="col-lg-8">

    <!-- the actual post -->
    <h1 >

      <div class="title">
        <%= @post.title %>
      </div>

    </h1>
    <p class="lead">
      <i class="fa fa-user"></i>
      by
      <a href="">Anonymous</a>
    </p>
    <hr>
    <p>
      <i class="fa fa-calendar"></i>
      Posted on
      <%= @post.created_at.strftime("%B %d, %Y") %>
    </p>
    <p>
      <i class="fa fa-tags"></i>
      Tags:
      <a href="">
        <span class="label label-info">Bootstrap</span></a>
      <a href="">
        <span class="label label-info">Web</span></a>
      <a href="">
        <span class="label label-info">CSS</span></a>
      <a href="">
        <span class="label label-info">HTML</span></a>
    </p>

    <p class="lead" style="word-wrap:break-word;">
      <%= @post.body %>
    </p>
    <br/>

    <!-- the comment box -->
    <div class="well">

      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>

      <%= render partial: 'comments/new_post_comment' %>

    </div>

    <hr>

    <!-- the comments -->
    <div class='comments'>

      <div class='post-comments'>

        <%=  render partial: 'comments/comment', collection: @post.comments.limit(10) %>
        <button type="button" name="button"> Show more</button>



      </div>


    </div>

  </div>

  <div class="col-lg-4">
    <%= render 'shared/side_content'%>

    <%= render 'shared/side_related_posts' %>

  </div>

</div>
