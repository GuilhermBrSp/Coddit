<div class="row">
  <div class="col-lg-8">

    <!-- the actual post -->
    <h1 >

      <div class="title">
        <%= @post.title %>
      </div>

    </h1>

    <hr>
    <p>
      <i class="fa fa-calendar"></i>
      Posted on
      <%= @post.created_at.strftime("%B %d, %Y") %>
    </p>
    <p>
      <i class="fa fa-tags"></i>
      Tags:
      <%= render partial: 'posts/posts_tags', collection: @post.tags, :as => :tag  %>
    </p>

    <p class="lead" style="word-wrap:break-word;">
      <%= @post.body %>
    </p>
    <br/>

    <!-- the comment box -->
    <div class="well">

      <%= render partial: 'comments/new_post_comment' %>

    </div>

    <hr>

    <!-- the comments -->
    <div class='comments'>

      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>" id="flash"><%= value %></div>
      <% end %>

      <div class='post-comments'>

        <%= render partial: 'comments/comment', collection: @post.comments.limit(10) %>



      </div>

    </div>

  </div>

  <div class="col-lg-4" style="padding-top: 74px;">
    <%= render 'shared/side_content'%>

    <%= render 'shared/side_related_posts' unless @related_posts.empty?%>

  </div>

</div>
