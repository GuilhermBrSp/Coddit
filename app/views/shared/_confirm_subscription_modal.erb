<div class="modal-header">
  <div>
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
    <h2 class="modal-title" id="exampleModalLabel">Subscribe To This Subject</h2>
  </div>
</div>
<div class="modal-body" style="text-align:center">
  Would you like to be notified about updates to this topic?
</div>
<div class="modal-footer" style="text-align:center">
  <%= form_tag(create_subscription_path(tag_id:@tag_id), method: "post", remote: true, format: :js) do %>
    <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
    <%= button_tag :Yes, class:'btn btn-success', id:'confirm_subscription' %>
  <% end %>
</div>
